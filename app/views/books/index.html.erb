<h1>本の一覧</h1>
<p><%= notice %></p>

<div class="row w-100">
  <% @books.each do |book| %>
  <div class="col-3 mb-5">
    <%  %>
    <%= link_to (image_tag(book.image)), book.url %>
    <p><%= link_to '本のリンク', book.url, class: 'btn btn-danger mt-2' %></p>
    <p><%= book.title %></p>
    <p><%= link_to '本の詳細', book_path(book.id),class:'book_show btn btn-dark' %></p>
  </div>
  <% end %>
</div>
