<h1>ユーザー情報</h1>

<p>ニックネーム:<%= @user.nickname %></p>


<h2>このユーザーが書いたレビュー一覧</h2>

<% @user.reviews.each do |review| %>
  <p><%= link_to (image_tag(review.book.image)), review.book.url %></p>
  <p><%= review.book.title %></p>
  <p><%= review.title %></p>
  <p><%= review.content %></p>
  <p><%= link_to '本の詳細', book_path(review.book.id) %></p>
<% end %>
